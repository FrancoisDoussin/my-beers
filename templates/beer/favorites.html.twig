{% extends 'base.html.twig' %}

{% block body %}
    <h1>My Beers List</h1>

    <div class="row">
        {% for beer in beers %}
            <div class="col-xl-4 col-md-6 col-sm-12">
                <div class="card-deck ml-1 mr-1">
                    <img src="{{ beer.imageUrl }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ beer.name }}</h5>
                        <code class="card-title">{{ beer.slug }}</code>
                        <p class="card-text">{{ beer.tagline }}</p>
                        <p class="card-text">PH : {{ beer.ph }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('like') }}
{% endblock %}